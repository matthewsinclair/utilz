#!/usr/bin/env bash
#
# pdf2md - PDF to Markdown converter
#

set -euo pipefail

# Source common functions if not already loaded (from dispatcher)
if [[ "$(type -t info 2>/dev/null)" != "function" ]]; then
    SCRIPT_DIR="$(cd "$(dirname "${BASH_SOURCE[0]}")" && pwd)"
    UTILZ_HOME="${UTILZ_HOME:-$(cd "$SCRIPT_DIR/../.." && pwd)}"

    if [[ -f "$UTILZ_HOME/opt/utilz/lib/common.sh" ]]; then
        source "$UTILZ_HOME/opt/utilz/lib/common.sh"
    else
        echo "ERROR: Cannot find common.sh library" >&2
        exit 1
    fi
fi

# ============================================================================
# USAGE
# ============================================================================

usage() {
    cat <<EOF
Usage: pdf2md [OPTIONS] [ARGS]

PDF to Markdown converter

OPTIONS:
  -h, --help               Show this help
  --version                Show version

EXAMPLES:
  pdf2md --help
  pdf2md --version

For detailed help, run: utilz help pdf2md
EOF
}

# ============================================================================
# MAIN
# ============================================================================

# Parse arguments
while [[ $# -gt 0 ]]; do
    case "$1" in
        -h|--help)
            usage
            exit 0
            ;;
        --version)
            show_version "pdf2md"
            exit 0
            ;;
        *)
            error "Unknown option: $1"
            echo ""
            usage
            exit 1
            ;;
    esac
done

# Your implementation here
info "pdf2md is working!"
success "Implementation goes here"
